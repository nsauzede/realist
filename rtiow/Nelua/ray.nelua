require 'vec'
global Ray:type=@record{origin:Vec3, direction:Vec3}

function Ray.origin0(self: Ray): Vec3
    return self.origin
end

function Ray.direction0(self: Ray): Vec3
    return self.direction
end

function Ray.point_at_parameter(self: Ray, t: float32): Vec3
    return self.origin + t * self.direction
end
